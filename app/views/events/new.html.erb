<div class='hero-unit'>
	
	<h1>New event</h1>

<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %> 
  <% if signed_in? %>
  <%= f.hidden_field :name, :value => current_user.id %>
  <%else %>
  <%= f.hidden_field :name, :value => nil%>
  If you are not signed in, anyone can edit the event
  <%end %>
  <div class="field">
    <%= f.label :title , 'Title'%><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :dayof, "Date"%><br />
    <%= f.date_select :dayof %>
  </div>  
 Event Type
    <div class="field">  
    <%= f.radio_button :cat, 'tournament' %> Tournament
    <%= f.radio_button :cat, 'view' %> Viewing Party
    <%= f.radio_button :cat, 'con' %> Con/Pax
    <%= f.radio_button :cat, 'other'%> Other
  </div>  
  <br />
  <div class="field">
    <%= f.label :start %><br />
    <%= f.time_select :start %>
  </div>
 
<%= f.label :address, "Address "%> street, city, state or street, zip code
<br />
<%= f.text_field :address %>
  <div class="field">Supports html mark up
<%= f.label :desc, "Description"%>
<%= f.text_area :desc%>
</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Back', events_path %> 
	
	
	
	</div>
