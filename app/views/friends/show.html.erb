<% provide(:title, @friend.name) %>

<p id="notice"><%= notice %></p>

<div class="row">
  <aside class="span4">
    <p>
	 <%= gravatar_for @friend %>
	<p>
	<br><br>
	  <b>Name:</b>
	  <%= @friend.name %>
	  <br><b>Email:</b>
	  <%= @friend.email %>
	</p>
	<%= render 'shared/landborrowbuttons' %>

  </aside>

<div class="span8">
	<article class="module width_3_quarter">
	<header><h3 class="tabs_involved"><%= @friend.name %>'s Transactions</h3></header>
	<table class="tablesorter" cellspacing="0"> 
	<thead> 
		<tr> 
			<th>Amount</th>
		    <th>Status</th>
		    <th>Type</th>
		    <th>Time Left</th>
			<th>Actions</th>
		</tr> 
	</thead>
	<tbody> 
	<% @transactions.each do |transaction| %>
		<tr>
		    <td>â‚¬ <%= transaction.amount %></td>
		    <td><%= whatType(transaction.t_type) %></td>
			<td><%= whatStat(transaction.status) %></td>
		    <td><%= distance_of_time_in_words(Time.now, transaction.deadline) %></td>
		    <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
		    <td> <%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' }%></td>
		</tr>
	<% end %>
	</table>
	<%= will_paginate @transactions %>
	</tbody> 
	</table>
	</article><!-- end of content manager article -->
	

  </div>
</div>





