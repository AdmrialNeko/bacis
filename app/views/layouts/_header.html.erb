        	            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Events <b class="caret"></b>
              </a>
              <ul class="dropdown-menu"> 
              	<li><%= link_to "Create Event", '/events/new' %></li>
		
                <li class="divider"></li>
